{
    "version": 2,
    
    "builds": [
        {
         
            "src": "public/index.php",
            "use": "vercel-php@0.6.0",
            "config": {
              
                "storage": "storage/framework/cache,storage/framework/sessions,storage/framework/views,storage/logs,bootstrap/cache"
            }
        },
        {
           
            "src": "public/build",
            "use": "@vercel/static"
        }
    ],

    "rewrites": [
        
        {
            "source": "/build/(.*)",
            "destination": "/public/build/$1"
        },
        {
            "source": "/images/(.*)",
            "destination": "/public/images/$1"
        },
        {
            "source": "/favicon.ico",
            "destination": "/public/favicon.ico"
        },

        
        {
            "source": "/(.*)",
            "destination": "/public/index.php"
        }
    ],

    
    "installCommand": "composer install --no-dev --optimize-autoloader && npm install && npm run build"
}